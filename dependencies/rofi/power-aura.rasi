configuration {
  font: "UbuntuMono Nerd Font Medium 40";
}


* {
  bg: #1c1b22;
  bg-alt: #2b273d;
  bg-selected: #453d61;

  fg: #edecee;
  fg-alt: #4c566a;
  
  border: 0;
  margin: 0;
  padding: 5;
  spacing: 0;
}

window {
  width: 40%;
  background-color: @bg;
}

element {
  background-color: transparent;
  text-color: @fg-alt;
}

element selected {
  text-color: @fg;
  background-color: @bg-selected;
}

element-text {
  background-color: transparent;
  text-color: inherit;
    horizontal-align: 0.43;
}


listview {
  background-color: @bg;
  columns: 5;
  lines: 1;
}

mainbox {
  children: [listview];
  background-color: @bg;
}

